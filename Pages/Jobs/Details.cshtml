@page
@model JobTrackerRazorApp.Pages.Jobs.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Job</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.Company)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.Company.CompanyName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.ApplicationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.ApplicationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.LastContact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.LastContact)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.LastChecked)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.LastChecked)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.Rejected)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.Rejected)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.Interview)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Job.Interview)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Job.Tags)            
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Company</th>
                    <th>Process Rating</th>
                </tr>     
                @foreach (var item in Model.Job.Tags)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Company.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(ModelItem => item.Strength)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Job.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
