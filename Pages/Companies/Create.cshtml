@page
@model JobTrackerRazorApp.Pages.Companies.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Company</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Company.CompanyName" class="control-label"></label>
                <input asp-for="Company.CompanyName" class="form-control" />
                <span asp-validation-for="Company.CompanyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Size" class="control-label"></label>
                <input asp-for="Company.Size" class="form-control" />
                <span asp-validation-for="Company.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company.Sector" class="control-label"></label>
                <select asp-for="Company.Sector" class="form-control" asp-items="@Model.SectorNameSL">
                    <option value="">-- Select Sector --</option>
                </select>
                <span asp-validation-for="Company.SectorID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
